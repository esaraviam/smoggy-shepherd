---
import BaseLayout from "../../layouts/BaseLayout.astro";

const allPosts = await Astro.glob('../posts/*.md');

const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

---
<BaseLayout title="listdo de etiquetas">
    <h1>Aqui voy a mostrar las etiquetas</h1>
    {uniqueTags.map(tag => <div class="tag"><a href=`/tags/${tag}`>{tag}</a></div>)}
</BaseLayout>

<style>
    a {
        color: #00539F;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #F8FCFD;
    }
</style>